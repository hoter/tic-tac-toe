@import variables

html
body
    margin 0
    padding 0
    width document-width
    height document-height

.page
    width page-width
    height page-height
    
#menu-page
    text-align: center;

    a
        display block
        text-decoration none
    

#game-page
    display: none;
    background game-background

    .square
        background square-background
        border square-border-width solid game-background